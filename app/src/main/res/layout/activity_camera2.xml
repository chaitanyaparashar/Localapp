<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context="com.fourway.localapp.camera.Camera2Activity">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_alignParentTop="true"
        />
    
    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/ll"
        android:id="@+id/gallery_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>



    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="center"
            android:elevation="3dp"
            android:id="@+id/flash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/ic_automatic_flash" />


        <Button
            android:layout_gravity="center_horizontal"
            android:elevation="4dp"
            android:id="@+id/btn_takepicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#FFFF"
            android:background="@drawable/ic_circle_outline" />



        <Button
            android:layout_gravity="center"
            android:elevation="3dp"
            android:id="@+id/flipCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/ic_flip_camera_svgrepo_com" />

    </LinearLayout>




</RelativeLayout>
