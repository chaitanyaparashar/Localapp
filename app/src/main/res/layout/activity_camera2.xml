<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fourway.localapp.camera.Camera2Activity">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gallery_RecyclerView"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/btn_takepicture"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>


    <Button
        android:elevation="4dp"
        android:id="@+id/btn_takepicture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:backgroundTint="#FFFF"
        android:background="@drawable/ic_circle_outline" />

    <Button
        android:elevation="3dp"
        android:id="@+id/flash"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/ic_automatic_flash"
        android:layout_alignBaseline="@+id/flipCamera"
        android:layout_alignBottom="@+id/flipCamera"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp" />

    <Button
        android:elevation="3dp"
        android:id="@+id/flipCamera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/ic_flip_camera_svgrepo_com"
        android:layout_alignBaseline="@+id/btn_takepicture"
        android:layout_alignBottom="@+id/btn_takepicture"
        android:layout_toEndOf="@+id/btn_takepicture"
        android:layout_marginStart="55dp" />

</RelativeLayout>
