<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="5dp"
    android:layout_margin="2dp"
    android:paddingTop="10dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.fourway.localapp.ui.CircularNetworkImageView
            android:background="@drawable/user_circular_border"
            android:id="@+id/msg_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:layout_alignRight="@+id/msg_pic"
            android:id="@+id/msg_emoji"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        </RelativeLayout>




    <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
        android:id="@+id/textViewMsg"
        android:elevation="5dp"
        emojicon:emojiconSize="25sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="4"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_corner1"
        android:padding="16dp"
        android:text="Android charting application xml ui design. Android charting application xml ui design tutorial with example. Android charting application xml ui design. Android charting application xml ui design. "
        android:textColor="#000" />

</LinearLayout>