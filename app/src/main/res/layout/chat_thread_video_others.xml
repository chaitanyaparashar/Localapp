<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:layout_margin="2dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.localapp.ui.custom_views.CircularNetworkImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/msg_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user" />


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:elevation="3dp"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="12sp"
                    android:layout_gravity="start"
                    android:id="@+id/textViewName"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <FrameLayout
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:background="#ccc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/thumbli"
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:src="@drawable/ic_video_player"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:layout_width="210dp"
                        android:layout_height="210dp"
                        android:padding="50dp"
                        android:src="@android:drawable/ic_media_play"/>

                </FrameLayout>
                <TextView
                    android:id="@+id/sms_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        </LinearLayout>
    <ImageView
        android:layout_toEndOf="@+id/ll"
        android:layout_marginStart="-32dp"
        android:id="@+id/msg_emoji"
        android:layout_width="30dp"
        android:layout_height="30dp" />



</RelativeLayout>