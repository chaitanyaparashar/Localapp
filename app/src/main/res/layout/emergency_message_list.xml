<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#2196f3"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.localapp.ui.CircularNetworkImageView
                android:background="@drawable/user_circular_border"
                android:id="@+id/msg_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_alignRight="@+id/msg_pic"
                android:id="@+id/msg_emoji"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="4"
            emojicon:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_height="wrap_content">

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/textViewMsg"
                android:elevation="5dp"
                emojicon:emojiconSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="12dp"
                android:text="Android charting application xml ui design. Android charting application xml ui design tutorial with example. Android charting application xml ui design. Android charting application xml ui design. "
                android:textColor="#000" />

        </android.support.v7.widget.CardView>



    </LinearLayout>

    <Button
        android:id="@+id/accept_btn"
        android:layout_gravity="end"
        android:text="Accept"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:background="@drawable/signup_upload_pic_btn_shap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>