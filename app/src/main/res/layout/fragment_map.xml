<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/fmap_layout"
    android:focusableInTouchMode="true"
    tools:context="com.localapp.ui.MapFragment">



    <RelativeLayout
            android:id="@+id/rl"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:elevation="10dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/bottom_filter_lt"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/emergency_iv"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_health"/>

                <ImageView
                    android:id="@+id/student_iv"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_student" />

                <ImageView
                    android:id="@+id/professionals_iv"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_professionals"/>

                <ImageView
                    android:id="@+id/hobbies_iv"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_hobby"/>

                <ImageView
                    android:id="@+id/repair_iv"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_repair" />
                <ImageView
                    android:id="@+id/notice_board_iv"
                    android:layout_margin="5dp"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_notice" />


            </LinearLayout>

        <Button
            android:id="@+id/invite_btn"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#fff"
            android:background="@drawable/submit_button_state"
            android:text="Invite Neighbors &amp; Have more fun"/>





            <RelativeLayout
                android:clickable="false"
                android:id="@+id/user_detail_rl"
                android:visibility="gone"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:elevation="10dp">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/user_pic"
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_user"/>

                <TextView
                    android:id="@+id/user_name"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/user_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@android:color/background_dark"
                    android:text="Dr.Khilah Bharti"/>
                <TextView
                    android:id="@+id/user_title"
                    android:layout_marginLeft="5dp"
                    android:textSize="18sp"
                    android:layout_toRightOf="@+id/user_pic"
                    android:layout_below="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/user_pic"
                    android:layout_below="@+id/user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_toLeftOf="@+id/action_call"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_email"
                        android:id="@+id/action_email"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toStartOf="@+id/action_call" />

                    <ImageView
                        android:id="@+id/action_call"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_phone"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>



    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/search_box_style"
        android:elevation="5dp"
        android:weightSum="3">

        <AutoCompleteTextView
            android:paddingLeft="15dp"
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:hint="Search here..."
            android:id="@+id/autoCompleteTextView" />

        <ImageView
            android:id="@+id/search_camera_btn"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_width="30dp"
            android:tint="#696969"
            android:layout_height="30dp"
            android:src="@drawable/ic_camera"/>

        <ImageView
            android:id="@+id/search_btn"
            android:padding="2dp"
            android:src="@android:drawable/ic_search_category_default"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</FrameLayout>
