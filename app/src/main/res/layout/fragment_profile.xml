<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:elevation="2dp"
            android:background="#2196f3"
            android:layout_width="match_parent"
            android:layout_height="200dp">


            <com.github.siyamed.shapeimageview.CircularImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_user"
                android:layout_gravity="center"
                android:id="@+id/image_pic" />

            <ImageButton
                android:visibility="gone"
                android:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="image"
                android:clickable="true"
                android:padding="12dp"
                android:scaleType="fitXY"
                android:background="@drawable/camera_btn_select_state"
                android:tint="#FFF"
                android:src="@drawable/ic_camera"
                android:layout_alignBottom="@+id/image_pic"
                android:layout_alignEnd="@+id/image_pic"
                android:id="@+id/cam_btn" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">



                <LinearLayout
                    android:elevation="2dp"
                    android:background="@color/com_facebook_button_border_color_focused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_weight="1.9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="PERSONAL INFORMATION"
                        android:paddingLeft="2dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/edit_personal_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="Edit image icon"
                        android:clickable="true"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/editor_states"
                        android:src="@drawable/ic_pencil_edit" />


                </LinearLayout>



                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/_name"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_name"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:background="@color/com_facebook_button_border_color_focused"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="1dp"/>


                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/_phone"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_phone"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>


                <View
                    android:background="@color/com_facebook_button_border_color_focused"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/_email"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>




                <LinearLayout
                    android:elevation="2dp"
                    android:background="@color/com_facebook_button_border_color_focused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_weight="1.9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ABOUT"
                        android:paddingLeft="2dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:textSize="14sp"
                        android:gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/edit_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="Edit image icon"
                        android:clickable="true"
                        android:padding="8dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/editor_states"
                        android:src="@drawable/ic_pencil_edit" />


                </LinearLayout>

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/_profession"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_profession"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:background="@color/com_facebook_button_border_color_focused"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/_brief_intro"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_brief_intro"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:background="@color/com_facebook_button_border_color_focused"
                    android:layout_width="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:background="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/_details"
                        android:layout_margin="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1.9"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_detail_description"
                        android:drawablePadding="10dp"
                        android:textColor="#000"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>



                <Button

                    android:layout_marginTop="10dp"
                    android:id="@+id/_share_btn"
                    android:layout_gravity="center_horizontal"
                    android:text="Share App"
                    android:drawableTint="#2196f3"
                    android:drawableTop="@android:drawable/ic_menu_share"
                    android:background="@drawable/editor_states"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/_logout_btn"
                    android:layout_gravity="bottom"
                    android:text="Logout"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/submit_button_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />




            </LinearLayout>



        </ScrollView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/login_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">




            <ImageView
                android:src="@mipmap/ic_localapp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                />

            <!-- Email Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Email"/>
            </android.support.design.widget.TextInputLayout>

            <!-- Password Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:hint="Password" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/submit_button_state"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:padding="10dp"
                android:gravity="center"
                android:text="Log IN"
                android:textSize="16sp" />



            <TextView android:id="@+id/link_forgotPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FORGOT PASSWORD ?"
                android:textColor="#2196f3"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14sp"/>


            <Button
                android:id="@+id/link_signup"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/submit_button_state"
                android:layout_marginBottom="8dp"
                android:textColor="#fff"
                android:padding="10dp"
                android:gravity="center"
                android:text="Don't have an account yet? Sign Up"
                android:textSize="14sp" />

            <!--<Button

                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/submit_button_state"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:text="Don't have an account yet? Sign Up"
                android:gravity="center"
                android:textSize="12sp"/>-->
        </LinearLayout>

    </ScrollView>








</LinearLayout>